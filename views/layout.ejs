<body>
<%- include('_header')%>

    <%- body %>

    
 <!-- - body % -->
<!-- to fill any render file at here -->
<!-- ?render file as string pass im body variable of expree-ejs-layout library -->
  
<!-- <header>Hey,header</header>-->
<!-- <footer>Hey,footer</footer> -->

<%- script %>
<script>
    <%if(flash.success && flash.success.length>0){%>
        new Noty({
            theme:'metroui',
            text:'<%= flash.success %>',
            type:"success",
            layout:'topRight',
            timeout:1500
        }).show();
    <%}%>

    <%if(flash.error && flash.error.length>0){%>
        new Noty({
            theme:'metroui',
            text:'<%= flash.error %>',
            type:"error",
            layout:'topRight',
            timeout:1500
        }).show();
    <%}%>
</script>
</body>
</html>